<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiesta.hevs.ch.myapplication.InfoTransportActivity"
    android:background="@layout/drawable_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topView"
        android:paddingBottom="10dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/back_button"
            android:id="@+id/backButton" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="4"
            android:id="@+id/imageView"
            android:src="@mipmap/fiesta"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/transport_top_title"
            android:paddingBottom="10dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <TextView
                android:id="@+id/transport_top_name"
                android:text="sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/transport_top_date"
                android:text="sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/topView"
        android:text="NOM DU CHAUFFEUR"
        android:textSize="24dp"/>

    <!--<TextView
        android:id="@+id/infos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/driver_name"
        android:text="Vous devez confirmer votre course par message. Dites 'Bonjour' à votre conducteur"/>-->

    <TextView
        android:id="@+id/infos"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="4"
        android:lines="3"
        android:layout_below="@+id/driver_name"
        style="@style/ListViewStyle.Light"
        android:background="@layout/rounded_corners"
        android:textColor="@color/mainBackground"
        android:padding="10dp"
        android:textSize="13dp"
        android:layout_marginBottom="15dp"
        android:text="Vous devez confirmer votre course par message. Dites 'Bonjour' à votre conducteur"></TextView>


    <TextView
    android:id="@+id/driver_leave"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
        android:text="Départ"
        android:layout_below="@+id/infos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/driver_leave_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_below="@+id/infos"
        android:layout_alignLeft="@+id/nb_place_value"
        android:layout_alignStart="@+id/nb_place_value" /><!-- android:text="DépartVALUE"-->

    <TextView
        android:id="@+id/nb_place"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/driver_leave"
        android:text="Nbr place"/>
    <TextView
        android:id="@+id/nb_place_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"


        android:layout_below="@+id/driver_leave_value"
        android:layout_alignLeft="@+id/destination_value"
        android:layout_alignStart="@+id/destination_value" />
    <!-- android:text="Nbr placeVALUE"-->
    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/nb_place"
        android:text="Destination"/>
    <TextView
        android:id="@+id/destination_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/nb_place_value"
        android:layout_toRightOf="@+id/driver_name"
        android:layout_toEndOf="@+id/driver_name" />
    <!-- android:text="Destination"-->

</RelativeLayout>
