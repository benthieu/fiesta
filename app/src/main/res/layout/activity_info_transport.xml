<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fiesta.hevs.ch.myapplication.InfoTransportActivity">

    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="NOM DU CHAUFFEUR"/>

    <TextView
        android:id="@+id/infos"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/driver_name"
        android:text="Vous devez confirmer votre course par message. Dites 'Bonjour' à votre conducteur"/>


    <TextView
    android:id="@+id/driver_leave"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
        android:text="Départ"
        android:layout_below="@+id/infos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/driver_leave_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"

        android:layout_below="@+id/infos"
        android:layout_alignLeft="@+id/nb_place_value"
        android:layout_alignStart="@+id/nb_place_value" /><!-- android:text="DépartVALUE"-->

    <TextView
        android:id="@+id/nb_place"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/driver_leave"
        android:text="Nbr place"/>
    <TextView
        android:id="@+id/nb_place_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"


        android:layout_below="@+id/driver_leave_value"
        android:layout_alignLeft="@+id/destination_value"
        android:layout_alignStart="@+id/destination_value" />
    <!-- android:text="Nbr placeVALUE"-->
    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/nb_place"
        android:text="Destination"/>
    <TextView
        android:id="@+id/destination_value"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/nb_place_value"
        android:layout_toRightOf="@+id/driver_name"
        android:layout_toEndOf="@+id/driver_name" />
    <!-- android:text="Destination"-->

</RelativeLayout>
